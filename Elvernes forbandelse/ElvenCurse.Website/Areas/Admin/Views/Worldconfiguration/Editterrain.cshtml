@model ElvenCurse.Core.Model.Terrainfile
@{
    ViewBag.Title = "Editterrain";
}


<div class="row" style="font-family: verdana;">
    <div class="col-md-6">

        @using (Html.BeginForm("Editterrain", "Worldconfiguration", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(a => a.Id)
            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(a => a.Filename)
                @Html.DisplayFor(a => a.Filename)
            </div>
            
            <div class="form-group">
                <label>File</label>
                <input type="file" name="file" />
            </div>

            <input type="submit" value="Gem" class="btn btn-default" />
        }
    </div>

    
</div>

@section header{
    <style>
        .container {
            font-family: "verdana";
        }
    </style>
}