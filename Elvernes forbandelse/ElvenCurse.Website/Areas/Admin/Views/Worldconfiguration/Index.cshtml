@model ElvenCurse.Website.Areas.Admin.Models.WorldconfigurationViewmodel
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-2">

        <p>@Html.ActionLink("New mapsection", "Create", null, new { @class = "btn btn-default" })</p>

        <ul id="characterlist">
            @foreach (var section in Model.Worldsections)
            {
                <li>@Html.ActionLink(section.Name, "Edit", new { id = section.Id })</li>
            }
        </ul>
    </div>
    
    <div class="col-md-2">

        <p>@Html.ActionLink("New terrain", "Createterrain", null, new { @class = "btn btn-default" })</p>

        <ul id="characterlist">
            @foreach (var terrain in Model.Terrains)
            {
                <li>@Html.ActionLink(terrain.Filename, "Editterrain", new { id = terrain.Id })</li>
            }
        </ul>
    </div>
</div>



@section header{
    <style>
        #characterlist li {
            line-height: 30px;
            font-size: 16px;
            border: 1px solid black;
            -ms-border-radius: 20px;
            border-radius: 20px;
            text-align: center;
            margin-bottom: 10px;
            cursor: pointer;
        }

            #characterlist li:hover {
                background-color: lightblue;
            }

        #characterlist {
            list-style: none;
            margin: 0;
            padding: 0;
        }
    </style>
}