<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elvernes forbandelse</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/fontstyle.css" rel="stylesheet" />
    <style>
        body {
            font-family: "beyond_wonderlandregular";
            font-size: 18px;
        }
    </style>
    

    <script src="~/Scripts/polyfill.js"></script>

    @RenderSection("header", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Elvernes forbandelse", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Forsiden</a></li>
                    <li><a href="/Character">Mine figurer</a></li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Admin</a>
                    <ul class="dropdown-menu">
                        <li><a href="/admin/Worldconfiguration">Kort konfiguration</a></li>
                        <li><a href="/admin/Messagequeue">Message queue</a></li>
                        <li><a href="/dressingroom">Dressingroom</a></li>
                        <li><a href="/admin/Items">Items</a></li>
                    </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Elvernes forbandelse</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>